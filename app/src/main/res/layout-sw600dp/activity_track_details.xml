<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/TimerFragmentContainerView"
        android:name="com.example.trackapp.TimerFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/track_img"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_above="@+id/length"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/track_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/laps"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="6dp"
        android:text="@string/length"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/laps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="6dp"
        android:text="@string/laps"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/best_time"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="6dp"
        android:text="@string/date"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/best_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/last_time"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="6dp"
        android:text="@string/best_time"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/last_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="265dp"
        android:text="@string/last_time"
        android:textSize="25sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_recent_history"
        android:contentDescription="@string/timer"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>